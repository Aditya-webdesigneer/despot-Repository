        <input type="number" id="resultantTime" min="0" value="0"> s<br><br>
    </div>

    <canvas id="waveCanvas" width="800" height="300"></canvas>

    <script>
        const canvas = document.getElementById('waveCanvas');
        const ctx = canvas.getContext('2d');
        
        function drawWave(wavelength, amplitude, frequency, speed, time, color) {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            ctx.beginPath();
            for (let x = 0; x < canvas.width; x += 1) {
                const y = canvas.height / 2 + amplitude * Math.sin(2 * Math.PI * frequency * x / wavelength - 2 * Math.PI * time * frequency / speed);
                ctx.lineTo(x, y);
            }
            ctx.strokeStyle = color;
            ctx.stroke();
            
            ctx.beginPath();
            ctx.moveTo(0, canvas.height / 2);
            ctx.lineTo(canvas.width, canvas.height / 2);
            ctx.strokeStyle = 'black';
            ctx.stroke();
            
            ctx.beginPath();
            ctx.moveTo(canvas.width / 2, 0);
            ctx.lineTo(canvas.width / 2, canvas.height);
            ctx.stroke();
        }
        
        function updateWaves() {
            const waveColor = document.getElementById('waveColor').value;
            
            const firstWavelength = parseInt(document.getElementById('firstWavelength').value);
            const firstAmplitude = parseInt(document.getElementById('firstAmplitude').value);
            const firstFrequency = parseInt(document.getElementById('firstFrequency').value);
            const firstSpeed = parseInt(document.getElementById('firstSpeed').value);
            const firstTime = parseInt(document.getElementById('firstTime').value);
            
            const secondWavelength = parseInt(document.getElementById('secondWavelength').value);
            const secondAmplitude = parseInt(document.getElementById('secondAmplitude').value);
            const secondFrequency = parseInt(document.getElementById('secondFrequency').value);
            const secondSpeed = parseInt(document.getElementById('secondSpeed').value);
            const secondTime = parseInt(document.getElementById('secondTime').value);
            
            const resultantWavelength = parseInt(document.getElementById('resultantWavelength').value);
            const resultantAmplitude = parseInt(document.getElementById('resultantAmplitude').value);
            const resultantFrequency = parseInt(document.getElementById('resultantFrequency').value);
            const resultantSpeed = parseInt(document.getElementById('resultantSpeed').value);
            const resultantTime = parseInt(document.getElementById('resultantTime').value);
            
            drawWave(firstWavelength, firstAmplitude, firstFrequency, firstSpeed, firstTime, waveColor);
            drawWave(secondWavelength, secondAmplitude, secondFrequency, secondSpeed, secondTime, waveColor);
            drawWave(resultantWavelength, resultantAmplitude, resultantFrequency, resultantSpeed, resultantTime, waveColor);
        }
        
        document.getElementById('waveColor').addEventListener('change', function() {
            updateWaves();
        });
        
        document.querySelectorAll('input[type="number"]').forEach(input => {
            input.addEventListener('input', function() {
                updateWaves();
            });
        });
        
        updateWaves();

        </script>
        <div style="text-align:left; margine-lef:10px;">
    <p>.Aditya Deshpande</p>
  
    </script>
