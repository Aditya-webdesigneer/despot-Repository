    <div id="controls">
        <label for="waveColor">Select Color:</label>
        <input type="color" id="waveColor" value="#00ff00"><br><br>
        
        <h2>First Wave</h2>
        <label for="firstWavelength">Wavelength:</label>
        <input type="number" id="firstWavelength" min="1" value="100"> px<br><br>
        <label for="firstAmplitude">Amplitude:</label>
        <input type="number" id="firstAmplitude" min="10" value="50"> px<br><br>
        <label for="firstFrequency">Frequency:</label>
        <input type="number" id="firstFrequency" min="1" value="5"> Hz<br><br>
        <label for="firstSpeed">Speed:</label>
        <input type="number" id="firstSpeed" min="1" value="100"> px/s<br><br>
        <label for="firstTime">Time:</label>
        <input type="number" id="firstTime" min="0" value="0"> s<br><br>
        
        <h2>Second Wave</h2>
        <label for="secondWavelength">Wavelength:</label>
        <input type="number" id="secondWavelength" min="1" value="120"> px<br><br>
        <label for="secondAmplitude">Amplitude:</label>
        <input type="number" id="secondAmplitude" min="10" value="60"> px<br><br>
        <label for="secondFrequency">Frequency:</label>
        <input type="number" id="secondFrequency" min="1" value="7"> Hz<br><br>
        <label for="secondSpeed">Speed:</label>
        <input type="number" id="secondSpeed" min="1" value="120"> px/s<br><br>
        <label for="secondTime">Time:</label>
        <input type="number" id="secondTime" min="0" value="0"> s<br><br>
        
        <h2>Resultant Wave</h2>
        <label for="resultantWavelength">Wavelength:</label>
        <input type="number" id="resultantWavelength" min="1" value="200"> px<br><br>
        <label for="resultantAmplitude">Amplitude:</label>
        <input type="number" id="resultantAmplitude" min="10" value="70"> px<br><br>
        <label for="resultantFrequency">Frequency:</label>
        <input type="number" id="resultantFrequency" min="1" value="8"> Hz<br><br>
        <label for="resultantSpeed">Speed:</label>
        <input type="number" id="resultantSpeed" min="1" value="150"> px/s<br><br>
